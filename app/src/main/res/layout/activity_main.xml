<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="50dp"
            tools:layout_editor_absoluteX="29dp" tools:ignore="MissingConstraints">
        <TextView
                android:id="@+id/proses"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:maxLength="20"
                android:padding="15dp"
                android:textSize="30sp"
                android:background="@color/colourPink"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="end"/>
        <TextView
                android:id="@+id/hasil"
                android:layout_below="@id/proses"
                android:layout_centerHorizontal="true"
                android:maxLength="20"
                android:padding="15dp"
                android:textSize="30sp"
                android:background="@color/colourPink"
                android:textColor="#fff"
                android:textStyle="normal"
                android:textAlignment="viewEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="end"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_below="@id/hasil"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <Button
                        android:text="7"
                        android:background="@color/colourPurple"
                        android:textColor="#fff"
                        android:id="@+id/btntujuh"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="8"
                        android:background="@color/colourPurple"
                        android:textColor="#fff"
                        android:id="@+id/btndelapan"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="9"
                        android:background="@color/colourPurple"
                        android:textColor="#fff"
                        android:id="@+id/btnsembilan"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text=":"
                        android:background="@color/colorAccent"
                        android:textColor="#fff"
                        android:id="@+id/btnbagi"
                        android:textSize="30sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <Button
                        android:text="4"
                        android:background="@color/colourPurple"
                        android:textColor="#fff"
                        android:id="@+id/btnempat"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="5"
                        android:background="@color/colourPurple"
                        android:textColor="#fff"
                        android:id="@+id/btnlima"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="6"
                        android:background="@color/colourPurple"
                        android:textColor="#fff"
                        android:id="@+id/btnenam"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="x"
                        android:background="@color/colorAccent"
                        android:textColor="#fff"
                        android:id="@+id/btnkali"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <Button
                        android:text="1"
                        android:background="@color/colourPurple"
                        android:textColor="#fff"
                        android:id="@+id/btnsatu"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="2"
                        android:background="@color/colourPurple"
                        android:textColor="#fff"
                        android:id="@+id/btndua"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="3"
                        android:background="@color/colourPurple"
                        android:textColor="#fff"
                        android:id="@+id/btntiga"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="-"
                        android:background="@color/colorAccent"
                        android:textColor="#fff"
                        android:id="@+id/btnkurang"
                        android:textSize="30sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <Button
                        android:text="c"
                        android:background="@color/colourBlue"
                        android:textColor="#fff"
                        android:id="@+id/btnhapus"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="0"
                        android:background="@color/colourBlue"
                        android:textColor="#fff"
                        android:id="@+id/btnnol"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="="
                        android:background="@color/colourBlue"
                        android:textColor="#fff"
                        android:id="@+id/btnsamadengan"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="+"
                        android:background="#324399"
                        android:textColor="#fff"
                        android:id="@+id/btntambah"
                        android:textSize="30sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>